{
  "private": true,
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "build": "npm run clean && npm run styles:dev && npm run webpack:dev",
    "build:prod": "npm run clean && npm run copy && npm run styles:prod && npm run webpack:prod",
    "styles:dev": "./node_modules/.bin/node-sass --source-map true --include-path scss -o ./app/assets/styles ./app/components/styles",
    "styles:prod": "./node_modules/.bin/node-sass --include-path scss --output-style compressed -o ./dist/assets/styles ./app/components/styles",
    "webpack:dev": "./node_modules/.bin/webpack --config webpack.dev.config.babel.js --progress --colors",
    "webpack:prod": "./node_modules/.bin/webpack --config webpack.prod.config.babel.js --progress --colors",
    "clean": "rimraf ./dist && rimraf ./app/assets && rimraf ./.DS_Store && rimraf ./npm-debug.log",
    "copy": "./node_modules/.bin/copyfiles -u 1 ./app/**/*.{html,txt} dist"
  },
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.2.1",
    "copyfiles": "^1.0.0",
    "css-loader": "^0.23.1",
    "del": "^2.2.0",
    "eslint": "^3.2.2",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.0.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.0",
    "gulp-connect-php": "0.0.7",
    "gulp-cssnano": "^2.0.0",
    "gulp-if": "^2.0.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-rsync": "0.0.6",
    "gulp-sass": "^2.0.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^1.5.0",
    "imagemin-pngquant": "^5.0.0",
    "modernizr-webpack-plugin": "^1.0.5",
    "node-sass": "^3.8.0",
    "path": "^0.12.7",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-validator": "^2.2.7",
    "yargs": "^4.3.2"
  },
  "dependencies": {
    "foundation-sites": "^6.2.3",
    "jquery": "^3.1.0",
    "jump.js": "^1.0.1",
    "lscache": "^1.0.7",
    "react": "^15.3.0",
    "react-dom": "^15.3.0"
  }
}
